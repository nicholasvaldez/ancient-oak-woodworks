---
import { getCollection, type CollectionEntry } from 'astro:content';
import ImageWithFallback from './ui/ImageWithFallback.astro';

// Get all portfolio items and sort by date (newest first)
const portfolioItems: CollectionEntry<'portfolio'>[] = await getCollection('portfolio');
const sortedItems = portfolioItems.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Get only featured items or first 6 items
const displayItems = sortedItems.filter((item: CollectionEntry<'portfolio'>) => item.data.featured).slice(0, 6);
const finalItems: CollectionEntry<'portfolio'>[] = displayItems.length > 0 ? displayItems : sortedItems.slice(0, 6);
---

<section id="portfolio" class="py-20 bg-background">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-heading text-primary mb-4">
        Featured Portfolio
      </h2>
      <p class="text-lg font-body text-muted-foreground max-w-2xl mx-auto">
        Explore our collection of handcrafted furniture pieces that showcase the quality and artistry that goes into every Ancient Oak Woodworks creation.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {finalItems.map((item) => (
        <div class="group relative overflow-hidden rounded-xl bg-muted border border-border">
          <ImageWithFallback
            src={item.data.image}
            alt={item.data.title}
            class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-4 left-4 right-4 text-white">
              <h3 class="text-lg font-heading mb-1">{item.data.title}</h3>
              <p class="text-sm font-body opacity-90">{item.data.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a
        href="#contact"
        class="inline-flex items-center space-x-2 bg-accent-warm text-accent-warm-foreground font-heading px-8 py-4 rounded-lg hover:bg-accent-warm/90 transition-colors"
      >
        <span>Start Your Custom Project</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>