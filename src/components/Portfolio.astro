---
import ImageWithFallback from './ui/ImageWithFallback.astro';
---

<section id="portfolio" class="py-20 bg-background">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-heading text-primary mb-4">
        Featured Portfolio
      </h2>
      <p class="text-lg font-body text-muted-foreground max-w-2xl mx-auto">
        Explore our collection of handcrafted furniture pieces that showcase the quality and artistry that goes into every Ancient Oak Woodworks creation.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="group relative overflow-hidden rounded-xl bg-muted border border-border">
        <ImageWithFallback
          src="https://images.unsplash.com/photo-1506439773649-6e0eb8cfb237?auto=format&fit=crop&w=600&q=80"
          alt="Custom walnut dining table with live edge"
          class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="absolute bottom-4 left-4 right-4 text-white">
            <h3 class="text-lg font-heading mb-1">Live Edge Walnut Table</h3>
            <p class="text-sm font-body opacity-90">Custom 8-seat dining table</p>
          </div>
        </div>
      </div>
      
      <div class="group relative overflow-hidden rounded-xl bg-muted border border-border">
        <ImageWithFallback
          src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?auto=format&fit=crop&w=600&q=80"
          alt="Built-in oak bookshelf with custom lighting"
          class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="absolute bottom-4 left-4 right-4 text-white">
            <h3 class="text-lg font-heading mb-1">Built-in Oak Bookshelf</h3>
            <p class="text-sm font-body opacity-90">Floor-to-ceiling library</p>
          </div>
        </div>
      </div>
      
      <div class="group relative overflow-hidden rounded-xl bg-muted border border-border">
        <ImageWithFallback
          src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?auto=format&fit=crop&w=600&q=80"
          alt="Modern cherry wood kitchen cabinets"
          class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="absolute bottom-4 left-4 right-4 text-white">
            <h3 class="text-lg font-heading mb-1">Cherry Kitchen Cabinets</h3>
            <p class="text-sm font-body opacity-90">Full kitchen renovation</p>
          </div>
        </div>
      </div>
      
      <div class="group relative overflow-hidden rounded-xl bg-muted border border-border">
        <ImageWithFallback
          src="https://images.unsplash.com/photo-1631679706909-1844bbd07221?auto=format&fit=crop&w=600&q=80"
          alt="Rustic reclaimed wood conference table"
          class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="absolute bottom-4 left-4 right-4 text-white">
            <h3 class="text-lg font-heading mb-1">Reclaimed Wood Conference Table</h3>
            <p class="text-sm font-body opacity-90">12-person boardroom table</p>
          </div>
        </div>
      </div>
      
      <div class="group relative overflow-hidden rounded-xl bg-muted border border-border">
        <ImageWithFallback
          src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?auto=format&fit=crop&w=600&q=80"
          alt="Custom maple bedroom set with matching nightstands"
          class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="absolute bottom-4 left-4 right-4 text-white">
            <h3 class="text-lg font-heading mb-1">Maple Bedroom Set</h3>
            <p class="text-sm font-body opacity-90">King bed with matching furniture</p>
          </div>
        </div>
      </div>
      
      <div class="group relative overflow-hidden rounded-xl bg-muted border border-border">
        <ImageWithFallback
          src="https://images.unsplash.com/photo-1574180566232-aaad1b5b8450?auto=format&fit=crop&w=600&q=80"
          alt="Elegant mahogany executive desk with brass hardware"
          class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="absolute bottom-4 left-4 right-4 text-white">
            <h3 class="text-lg font-heading mb-1">Mahogany Executive Desk</h3>
            <p class="text-sm font-body opacity-90">Corner office centerpiece</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="#contact" 
        class="inline-flex items-center space-x-2 bg-accent-warm text-accent-warm-foreground font-heading px-8 py-4 rounded-lg hover:bg-accent-warm/90 transition-colors"
      >
        <span>Start Your Custom Project</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>